<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_main"
        android:background="#ff994d5b"
        android:layout_width="match_parent"
        android:layout_weight="8"
        android:layout_height="0dp" />
    <RadioGroup
        android:id="@+id/radiogroup_main"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_height="0dp">
        <RadioButton
            android:id="@+id/zixun_main"
            android:button="@null"
            android:gravity="center"
            android:padding="0dp"
            android:drawableTop="@drawable/selector_zixun_main"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <RadioButton
            android:id="@+id/luntan_main"
            android:button="@null"
            android:gravity="center"
            android:padding="0dp"
            android:drawableTop="@drawable/selector_luntan_main"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <RadioButton
            android:id="@+id/zhaoche_main"
            android:button="@null"
            android:gravity="center"
            android:padding="0dp"
            android:drawableTop="@drawable/selector_zhaoche_main"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <RadioButton
            android:id="@+id/youhui_main"
            android:button="@null"
            android:gravity="center"
            android:padding="0dp"
            android:drawableTop="@drawable/selector_youhui_main"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <RadioButton
            android:id="@+id/wode_main"
            android:button="@null"
            android:gravity="center"
            android:padding="0dp"
            android:drawableTop="@drawable/selector_wode_main"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
    </RadioGroup>
</LinearLayout>
